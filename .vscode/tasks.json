{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build ActivityTracker",
      "type": "shell",
      "command": "PyInstaller",
      "args": [
        "-F",
        "--specpath",
        "src",
        "-n",
        "ActivityTracker",
        "src/tracker/tracker.py"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "deploy",
      "type": "shell",
      "command": "PyInstaller",
      "args": [
        "-F",
        "--specpath",
        "src",
        "-n",
        "ActivityLogger",
        "src/activity_logger.py"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}